{
  "manifest_version": 3,
  "name": "MailTracker AI",
  "version": "1.0.0",
  "description": "Track Gmail email opens and clicks â€” free Mailtrack alternative.",
  "permissions": ["storage", "scripting", "activeTab", "notifications"],
  "host_permissions": ["https://mail.google.com/*", "https://mailtracker-ai.onrender.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
